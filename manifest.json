{
  "manifest_version": 3,
  "name": "Chess Pal",
  "version": "1.0.0",
  "description": "A live Chess assistant",
  "permissions" : ["activeTab" , "storage"],
   "content_scripts" : [
    {
        "matches":["https://www.chess.com/game/live/*", "https://www.chess.com/play/online*"],
        "js" : ["content.js"],
        "css": ["styles.css"]
    }
   ],

   "background":
   {
    "service_worker" : "background.js"
   },

   "action" : 
   {
        "default_popup" : "popup.html"
   }
}